<%= form.fields_for :phones do |phone_form| %>
  <div class="inline fields">
    <div class="field">
      <%= phone_form.label :label, 'Label:' %>
      <div class="ui selection dropdown">
        <%= phone_form.hidden_field :label %>
        <div class="default text">Select label</div>
        <i class="dropdown icon"></i>
        <div class="menu">
          <div class="item" data-value="Home">Home</div>
          <div class="item" data-value="Work">Work</div>
          <div class="item" data-value="Other">Other</div>
        </div>
      </div>
    </div>
    <div class="field">
      <%= phone_form.label :phone, 'phone:' %>
      <%= phone_form.text_field :phone %>
    </div>
    <% unless phone_form.object.nil? || phone_form.object.new_record? %>
      <div class="field">
        <div class="ui checkbox">
          <%= phone_form.check_box :_destroy %>
          <%= phone_form.label :_destroy, 'Check to remove on saving' %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>