  <div class="inline fields">
    <div class="field">
      <label for="contact_phones_attributes_$count$_label">Label:</label>
      <div class="ui selection dropdown">
        <input id="contact_phones_attributes_$count$_label" name="contact[phones_attributes][$count$][label]" type="hidden">
        <div class="default text">Select label</div>
        <i class="dropdown icon"></i>
        <div class="menu">
          <div class="item" data-value="Home">Home</div>
          <div class="item" data-value="Work">Work</div>
          <div class="item" data-value="Other">Other</div>
        </div>
      </div>
    </div>
    <div class="field">
      <label for="contact_phones_attributes_$count$_phone">phone:</label>
      <input id="contact_phones_attributes_$count$_phone" name="contact[phones_attributes][$count$][phone]" size="30" type="text">
    </div>
    <div class="field"><a><i class="ui remove icon" data-placement="right" data-toggle="tooltip" title="Remove"></i></a></div>
  </div>
